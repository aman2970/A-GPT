<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="16dp"
        android:left="-8dp"
        android:right="-8dp"
        android:top="-8dp">
        <shape android:shape="rectangle">
            <solid android:color="#EDEDED" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:left="-8dp"
        android:right="-8dp"
        android:top="-8dp">
        <shape android:shape="rectangle">
            <solid android:color="#EDEDED" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:bottom="-16dp"
        android:left="-8dp"
        android:right="-8dp"
        android:top="-8dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="#EDEDED" />
            </shape>
        </rotate>
    </item>
</layer-list>